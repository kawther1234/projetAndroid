<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".FormIntervention">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="376dp"
        android:layout_height="77dp"
        android:gravity="center"
        android:text="Interventions"
        android:textColor="#711515"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/ititre"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:hint="titre"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/icomm"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:hint="commentaires"
        android:inputType="textPersonName"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/idatedeb"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:hint="datedebut"
        android:padding="10dp" />

    <EditText
        android:id="@+id/idatefin"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:hint="datefin"
        android:padding="10dp" />

    <EditText
        android:id="@+id/idateplanification"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/white"
        android:inputType="textPersonName"
        android:hint="date"
        android:padding="10dp" />

    <EditText
        android:id="@+id/idatevalidation"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:inputType="textPersonName"
        android:hint="date Validation"
        android:padding="10dp" />

    <EditText
        android:id="@+id/idateterminaison"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:inputType="textPersonName"
        android:hint="terminaison"
        android:padding="10dp" />

    <EditText
        android:id="@+id/iheuredebplan"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="heure debut plan"
        android:inputType="textPersonName"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/iheurefinplan"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:hint="heurefinplan" />

    <EditText
        android:id="@+id/iheuredebeffect"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <EditText
        android:id="@+id/iheurefineffect"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:hint="heurefineffect" />

    <Button
        android:id="@+id/btnInter"
        android:layout_width="269dp"
        android:layout_height="91dp"
        android:background="#398AB6"
        android:clickable="true"
        android:padding="10dp"
        android:text="Ajouter interventions"
        android:textColorHighlight="#2196F3" />
</LinearLayout>